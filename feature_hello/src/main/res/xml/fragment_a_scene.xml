<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@+id/end"
        app:constraintSetStart="@id/start"
        app:duration="100">

        <OnSwipe
            app:touchAnchorSide="bottom"
            app:touchAnchorId="@id/listView"
            app:touchRegionId="@id/listView"
            app:dragDirection="dragUp"/>

        <KeyFrameSet>
            <KeyAttribute
                app:framePosition="30"
                app:motionTarget="@id/backgroundView">
                <CustomAttribute
                    app:attributeName="crossfade"
                    app:customFloatValue="0" />
            </KeyAttribute>

            <KeyPosition
                app:keyPositionType="pathRelative"
                app:percentX="-0.7"
                app:framePosition="30"
                app:motionTarget="@id/backgroundCardView"/>

            <KeyAttribute
                android:elevation="4dp"
                android:alpha="1.0"
                app:framePosition="30"
                app:motionTarget="@id/bannerListContainer" />
            <KeyPosition
                app:keyPositionType="pathRelative"
                app:percentX="1.0"
                app:framePosition="30"
                app:motionTarget="@id/bannerListContainer" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@id/backgroundView">
            <Layout
                android:layout_width="0dp"
                android:layout_height="220dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <CustomAttribute
                app:attributeName="crossfade"
                app:customFloatValue="0" />
        </Constraint>

        <Constraint android:id="@id/headerView">
            <Layout
                android:layout_width="0dp"
                android:layout_height="180dp"
                app:layout_constraintTop_toBottomOf="@id/headerSpaceView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/backgroundCardView"/>
        </Constraint>

        <Constraint android:id="@+id/backgroundCardView">
            <Layout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/headerView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <Transform
                android:elevation="4dp"/>
        </Constraint>

        <Constraint android:id="@+id/bannerListContainer">
            <Layout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="104dp"
                android:layout_marginStart="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <Transform
                android:elevation="4dp"/>
            <PropertySet
                android:alpha="1.0"/>
        </Constraint>

        <Constraint android:id="@+id/listView">
            <Layout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/bannerListContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <Transform
                android:elevation="4dp"/>
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@id/backgroundView">
            <Layout
                android:layout_width="0dp"
                android:layout_height="220dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <CustomAttribute
                app:attributeName="crossfade"
                app:customFloatValue="1" />
        </Constraint>

        <Constraint android:id="@id/headerView">
            <Layout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/headerSpaceView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/backgroundCardView"/>
        </Constraint>

        <Constraint android:id="@+id/backgroundCardView">
            <Layout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:elevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/headerView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <Transform
                android:elevation="4dp"/>
        </Constraint>

        <Constraint android:id="@+id/bannerListContainer">
            <Layout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="68dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/headerSpaceView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <Transform
                android:elevation="0dp"/>
            <PropertySet
                android:alpha="0.0"/>
        </Constraint>

        <Constraint android:id="@+id/listView">
            <Layout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/headerView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <Transform
                android:elevation="4dp"/>
        </Constraint>
    </ConstraintSet>

</MotionScene>